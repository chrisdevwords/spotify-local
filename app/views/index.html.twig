{% extends "_global/base.html.twig" %}
{%  block css %}
{{ super() }}
<link rel="stylesheet" href="css/main.css" />
{%  endblock %}
{% block content %}
    <main class="measure">
        <header class="p1 txt--center">
            <h1 class="h1 fnt--green">Office Spotify</h1>
            {%  if not accessToken %}
            <form class="txt--left m2" role="form" action="/login" method="post">
                <input type="submit" class="btn--green" value="Generate Spotify Access Token">
            </form>
            {% endif %}
            <a href="#!" class="btn--red btn--sm m2" id="quit-button">Quit</a>
        </header>
        <div class="grd">
            <div class="grd-row m1">
                <section id="now-playing" class="bg--off-white p2 grd-row-col-3-6--md">
                    <h1 class="h3 bold">Now Playing:</h1>
                    <h2 class="h5 fnt--orange m0" id="current-track"></h2>
                    <h3 class="h5 m0" id="requested-by"></h3>
                </section>
                <section id="queue" class="bg--light-gray p2 grd-row-col-3-6--md">
                    <h1 class="h4 bold">Queued Tracks</h1>
                    <div id="queued-tracks" class="m0"></div>
                </section>
            </div>
        </div>
        <section class="measure txt--center">
            <div id="yt-player"></div>
        </section>
        <footer class="txt--center">
            <nav>
                <a href="{{ docLink }}" target="_blank">Read the API Docs.</a>
            </nav>
        </footer>
    </main>
{% endblock %}
{%  block body_js %}
    <script type="text/javascript" src="/js/main.js"></script>
{% endblock %}
